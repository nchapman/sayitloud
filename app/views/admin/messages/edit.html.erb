<h1>Editing message</h1>

<% form_for([:admin, @site, @message]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [:admin, @site, @message] %> |
<%= link_to 'Back', admin_site_messages_path(@site) %>